{
  "compilerOptions": {                         
    "target": "ES2019",                             
    "module": "CommonJS",                           
    "lib": ["DOM", "ESNext"],                          
    "outDir": "./dist",                             
    "rootDir": "./src",                    
    "removeComments": true,                         
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
